/* pages/me/me.wxss */
/* 最外层父元素 */
.profile{
  background: #0cd5f8;
  height: 200px;
  text-align: center;
  width: 100%;
  position: relative;
  
}
/* 头像元素 */
.profile .profile-img{
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius:50%; 
  left: 50%;
  transform: translate(-50%,20rpx)
}
.profile  .profile-name{
  position: absolute;
  left: 50%;
  top:200rpx;
}